
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SRMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SRMS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    


  
</head>
<body class="d-flex flex-column h-100">
    <div class=".bg-dark.bg-gradient">
        <header >
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <h4 class="bg-dark text-white p-4"><i class="fa-solid fa-school"></i>  Student Result Management System</h4>
                <div class="container justify-content-between">
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto" style="font-size: x-large">
                            <li class="nav-item mx-2">
                                <a class="nav-link" asp-controller="Home" asp-action="Dashboard"><i class="fa-solid fa-house"></i> Home</a>
                            </li>
                            <li class="nav-item dropdown mx-2">
                                <a class="nav-link dropdown-toggle" id="studentDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-graduation-cap"></i> Student
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="studentDropdown">
                                    <li><a class="dropdown-item" asp-controller="Student" asp-action="StudentIndex">Student Index</a></li>
                                    <li><a class="dropdown-item" asp-controller="Student" asp-action="AddStudent">Add Student</a></li>
                                    <!-- Add more student-related links as needed -->
                                </ul>
                            </li>
                            <li class="nav-item dropdown mx-2 ">
                                <a class="nav-link dropdown-toggle" href="ClassIndex" id="classDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-people-roof"></i>  Class
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="classDropdown">
                                    <li><a class="dropdown-item" asp-controller="Class" asp-action="ClassIndex">Class Index</a></li>
                                    <li><a class="dropdown-item" asp-controller="Class" asp-action="AddClass">Add Class</a></li>
                                    <!-- Add more class-related links as needed -->
                                </ul>
                            </li>
                            <li class="nav-item dropdown mx-2">
                                <a class="nav-link dropdown-toggle" href="#" id="subjectDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-book-open"></i> Subject
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="subjectDropdown">
                                    <li><a class="dropdown-item" asp-controller="Subject" asp-action="Index">Subject Index</a></li>
                                    <li><a class="dropdown-item" asp-controller="Subject" asp-action="Create">Add Subject</a></li>
                                    <!-- Add more subject-related links as needed -->
                                </ul>
                            </li>
                            <li class="nav-item dropdown mx-2">
                                <a class="nav-link dropdown-toggle" href="#" id="resultDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-square-poll-horizontal"></i> Result
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="resultDropdown">
                                    <li><a class="dropdown-item" asp-controller="Index" asp-action="ResultIndex">Result Index</a></li>
                                    <li><a class="dropdown-item" asp-controller="Index" asp-action="AddResult">Add Result</a></li>
                                    <!-- Add more result-related links as needed -->
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="d-flex justify-content-right">
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown mx-2">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <h5>Welcome!</h5> <i class="fa-solid fa-user-tie"></i> @ViewBag.AdmSession
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" href="#">  <i class="fa-solid fa-user"></i> Profile</a></li>
                                    <li><a class="dropdown-item" href="#"> <i class="fa-solid fa-gear"></i> Settings </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="AdminLogin"><i class="fa-solid fa-right-from-bracket"></i> Logout</a></li>
                                </ul>
                            </li>
                        </ul>
                        <!-- Add your logo here -->
                        <!-- Example: <img src="path/to/logo.png" alt="Logo"> -->
                    </div>
                </div>
            </nav>
        </header>

        <main role="main">
            <div class="row">
                <div class="col-12">
                    @RenderBody()
                </div>
            </div>
        </main>
        <footer class ="text-muted">
            <p>&copy; 2024 Student Result Management System</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
