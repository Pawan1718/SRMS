@model SRMS.Models.ClassModel

@{
    ViewData["Title"] = "AddClass";
}

<h1>Add Class</h1>

<h4>ClassModel</h4>
<hr />

<div class="row justify-content-center">
    
    <div class="row justify-content-center">
      <div class="col-md-6">
            <form asp-action="AddClass">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ClassInWord" class="control-label">Class In Words</label>
                    <input asp-for="ClassInWord" class="form-control" />
                    <span asp-validation-for="ClassInWord" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClassInNumeric" class="control-label">Class In Numeric</label>
                    <input asp-for="ClassInNumeric" class="form-control" />
                    <span asp-validation-for="ClassInNumeric" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Section" class="control-label">Section</label>
                    <input asp-for="Section" class="form-control" />
                    <span asp-validation-for="Section" class="text-danger"></span>
                </div>
                <br />
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100">Create</button>
                 </div>
            </form>
           </div>
      </div>

             <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="mb-3">
                        <a asp-action="ClassIndex" class="btn btn-secondary w-100">Back to List</a>
                     </div>
                </div>
             </div>


</div>